    "lint": "gts lint",
    "clean": "gts clean"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "mocha": "^8.2.0",
    "nyc": "^15.1.0",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "peggy": "^2.0.1",
    "ts-pegjs": "^2.1.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "gts": "^3.0.2",
    "@types/node": "^14.11.2"
  },
  "dependencies": {
  },
  "nyc": {
    "include": "src/**/*.ts",
    "exclude": "**/parser.ts"
  }
